@model SancScan.Models.Login

@{
    ViewData["Title"] = "Kullanıcı Kaydı Oluştur";
}

<h1>Create</h1>

<h4>Login</h4>
<hr />
@using (Html.BeginForm("Create", "Login", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="d-inline-flex p-2">
    <div class="row">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" name="Password" itemid="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        
    </div>
</div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
