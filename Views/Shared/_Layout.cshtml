@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SancScan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SancScan.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (@Accessor.HttpContext.Session.GetString("username") != null)
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container-fluid">
                <a href="#" class="navbar-brand">
                    <img src="~/Logo/SansScanLogo.png"/>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index"><b>Kitap Kayıt Listesi</b></a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Borrow" asp-action="Index"><b>Ödünç Listesi</b></a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Logout"><b>Çıkış</b></a>
                            </li>
                    </ul>
                </div>
            </div>
        </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (@Accessor.HttpContext.Session.GetString("username") != null)
    {
        <footer class="footer bg-dark">
            <div class="container mx-3">
            <h6 class="text-center text-warning">SANCTION SCANNER ®</h6>
            <p class="text-center text-light">Mustafa KOŞMAZ</p>
        </div>
    </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
