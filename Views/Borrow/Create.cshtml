@model SancScan.Models.Borrow

@{
    ViewData["Title"] = "Oluştur";
}

<h3 class="text-center">ÖDÜNÇ KAYDI OLUŞTURMA SAYFASI</h3>


<hr />
@using (Html.BeginForm("Create", "Borrow", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="d-inline-flex p-2">
    <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="BookId" class="control-label">Kitap Adı</label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label for="BorrowerName" class="control-label">Ödünç Alanın İsmi</label>
                <input asp-for="BorrowerName" class="form-control" />
                <span asp-validation-for="BorrowerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BringBackDate" class="control-label">Geri getireceği tarih</label>
                <input asp-for="BringBackDate" class="form-control"/>
                <span asp-validation-for="BringBackDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="OLUŞTUR" class="btn btn-primary" style="margin-top:20px;"/>
            </div>
            
        </div>
</div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
