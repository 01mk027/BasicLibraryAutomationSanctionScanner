@model SancScan.Models.Borrow

@{
    ViewData["Title"] = "Edit";
}

@if (ViewBag.ErrorMessage != null)
{
    <h1>@ViewBag.ErrorMessage</h1>    
}

<h3 class="text-center">KİTAP ÖDÜNÇ KAYDI DÜZENLEME</h3>

<hr />
@using (Html.BeginForm("Edit", "Borrow", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="d-inline-flex p-2">
    <div class="row">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BorrowId" name="BorrowId" />
            <input type="hidden" asp-for="BookId" name="BookId"/>
            <div class="form-group">
                <label asp-for="BorrowerName" class="control-label"></label>
                <input asp-for="BorrowerName" class="form-control" />
                <span asp-validation-for="BorrowerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BringBackDate" class="control-label"></label>
                <input asp-for="BringBackDate" class="form-control" />
                <span asp-validation-for="BringBackDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="IsBroughtBack">Geri getirildi mi?</label>
                @Html.CheckBox("IsBroughtBack")
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        
    </div>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
