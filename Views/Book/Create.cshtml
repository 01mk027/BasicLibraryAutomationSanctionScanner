@model SancScan.Models.Book

@{
    ViewData["Title"] = "Ekle";

}

<h1 class="text-center">KİTAP EKLEME SAYFASI</h1>

@using (Html.BeginForm("Create", "Book", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="d-inline-flex p-2">
        <div class="row">
            <div class="form-group">
                <label for="BookName" class="control-label">Kitap İsmi</label>
                <input name="BookName" class="form-control" required/>
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="AuthorName" class="control-label">Yazar İsmi</label>
                <input name="AuthorName" class="form-control" required/>
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="Image">Resim</label>
                <input type="file" name="Image" itemid="Image" accept="image/*" class="form-control" required/>
            </div>

            
                <input type="submit" value="EKLE" class="btn btn-primary" style="margin-top: 20px;"/>
            
            
        
        
        </div>
</div>


}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
